@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Wallet.DTO.Request.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout_Home.cshtml";
}

<div class="w-full h-full flex">
    <!-- Left Side: Form Section -->
    <div class="w-full md:w-1/2 flex flex-col justify-center h-screen p-6 sm:p-8 lg:p-32 text-white relative" style="background-color: #1f2227">
        <!-- Logo and Brand Name -->
        <div class="absolute top-8 left-8 flex items-center space-x-2">
            <img style="height:50px" src="/images/letter-n-big-logo-pack-design-creative-modern-logos-design-your-business-vector-brand-name-illustration.png" alt="Alternate Text" />
            <a href="@Url.Action("Index", "Home")" class="text-3xl font-extrabold">NiftyWallet.</a>
        </div>

        <!-- Content Section -->
        <div class="mt-24">
            <!-- Adjusted margin to position content below the logo -->
            <h1 class="text-3xl font-bold mb-2">Welcome back</h1>
            <p class="text-gray-400">We're delighted to have you here!</p>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
        }

        <!-- Form Section -->
        <form method="post" asp-controller="Account" asp-action="Login" class="mt-4">
            @Html.AntiForgeryToken()
            <div class="mb-4">
                <input asp-for="Email" type="email" placeholder="Enter your email address"
                       class="w-full p-3 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 focus:shadow-md shadow-[#6172de] bg-[#272a2f] transition duration-300 ease-in-out transition-property[box-shadow,border-color]" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <input asp-for="Password" type="password" placeholder="Enter your password"
                       class="w-full p-3 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 focus:shadow-md shadow-[#6172de] bg-[#272a2f] transition duration-300 ease-in-out transition-property[box-shadow,border-color]" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit"
                    class="w-full text-white font-bold py-3 rounded-lg mb-4 shadow-lg hover:shadow-indigo-600/70 transition-shadow duration-300 ease-in-out" style="background-color:#6172de">
                Sign in
            </button>
        </form>

        <!-- Registration Link -->
        <div class="text-center mt-6 text-sm">
            <p class="text-gray-400">
                You don't have an account yet? <a href="@Url.Action("Register", "Account")" class="text-indigo-500">Register</a>
            </p>
        </div>
        <p class="text-gray-400 mt-6 text-sm text-center absolute bottom-3 left-0 right-0 mb-2">
            &copy; NiftyWallet - 2024 . All rights reserved
        </p>
    </div>

    <!-- Right Side: Image or Illustration Section -->
    <div class="hidden md:flex md:w-1/2  items-center justify-center p-8 h-screen" style="background-color: #1f2227">
        <div class="text-center">
            <!-- Placeholder for the image -->
            <img src="/images/m001t0305_d_e_commerce_25aug22.png" alt="Alternate Text" class="rounded-3xl" />
        </div>
    </div>
</div>



