@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Wallet.Data.Models.VerifyEmailModel

@{
    ViewData["Title"] = "Verify Email";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Digital Wallet</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="bg-gradient-to-r from-indigo-900 via-purple-900 to-indigo-900 text-gray-100 flex items-center justify-center min-h-screen">
    <div class="bg-gray-800 p-8 rounded-xl shadow-lg w-full max-w-md">
        <h2 class="text-3xl font-extrabold text-center text-green-400 mb-6">Verify Your Email</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="bg-red-600 text-white p-4 rounded-lg mb-4">
                @Html.ValidationSummary(true, "", new { @class = "text-white" })
            </div>
        }

        <form method="post" asp-controller="Account" asp-action="VerifyEmail" class="space-y-6">
            @Html.AntiForgeryToken()
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-300 mb-2">Email Address</label>
                <input asp-for="Email" class="block w-full p-3 rounded-lg bg-gray-700 border border-gray-600 text-gray-300 placeholder-gray-500 focus:ring-2 focus:ring-green-400 focus:outline-none transition duration-200" placeholder="you@example.com" />
                <span asp-validation-for="Email" class="text-red-500 text-sm mt-2"></span>
            </div>

            <div>
                <label asp-for="Code" class="block text-sm font-medium text-gray-300 mb-2">Verification Code</label>
                <input asp-for="Code" class="block w-full p-3 rounded-lg bg-gray-700 border border-gray-600 text-gray-300 placeholder-gray-500 focus:ring-2 focus:ring-green-400 focus:outline-none transition duration-200" placeholder="Enter your code" />
                <span asp-validation-for="Code" class="text-red-500 text-sm mt-2"></span>
            </div>

            <button type="submit" class="w-full bg-green-500 text-white font-bold p-3 rounded-lg hover:bg-green-600 focus:ring-2 focus:ring-green-400 transition duration-200">Verify Email</button>
        </form>

        <p class="text-center text-gray-400 mt-6">
            Didn't receive a code? <a href="@Url.Action("ResendVerification", "Account")" class="text-green-400 hover:underline">Resend Code</a>
        </p>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>

</html>
