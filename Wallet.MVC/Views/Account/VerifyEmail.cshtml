@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Wallet.Data.Models.VerifyEmailModel

@{
    ViewData["Title"] = "Verify Email";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Digital Wallet</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-gray-900 text-gray-100 flex items-center justify-center h-screen">
    <div class="bg-gray-800 p-6 rounded-lg shadow-md w-full max-w-md">
        <h2 class="text-3xl font-bold text-center text-green-500 mb-4">Verify Email</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="bg-red-600 text-white p-4 rounded-lg mb-4">
                @Html.ValidationSummary(true, "", new { @class = "text-white" })
            </div>
        }

        <form method="post" asp-controller="Account" asp-action="VerifyEmail" class="space-y-4">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="Email" class="block text-gray-300">Email</label>
                <input asp-for="Email" class="form-control w-full p-3 rounded bg-gray-700 border border-gray-600 text-gray-300 placeholder-gray-500" />
                <span asp-validation-for="Email" class="text-red-500"></span>
            </div>
            <div class="form-group">
                <label asp-for="Code" class="block text-gray-300">Verification Code</label>
                <input asp-for="Code" class="form-control w-full p-3 rounded bg-gray-700 border border-gray-600 text-gray-300 placeholder-gray-500" />
                <span asp-validation-for="Code" class="text-red-500"></span>
            </div>
            <button type="submit" class="bg-green-500 text-white p-3 rounded w-full hover:bg-green-700 transition duration-300">Verify</button>
        </form>
        <p class="text-center text-gray-400 mt-4">
            Didn't receive a code? <a href="@Url.Action("ResendVerification", "Account")" class="text-green-500 hover:underline">Resend Code</a>
        </p>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
