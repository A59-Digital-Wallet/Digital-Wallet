@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Wallet.Data.Models.Verify2FAModel

@{
    ViewData["Title"] = "Verify Two-Factor Authentication";
    Layout = "_Layout"; // Ensure it uses the same layout
}

<div class="container mx-auto mt-8 p-4 max-w-lg">
    <div class="card p-6 rounded-lg shadow-lg">
        <!-- Heading -->
        <div class="text-center mb-6">
            <h2 class="text-3xl font-bold mb-4">@ViewData["Title"]</h2>
            <p class="text-gray-600 mb-6">Enter the code generated by your authenticator app to verify and complete the two-factor authentication process.</p>
        </div>

        <!-- Form for verification code -->
        <form asp-action="Verify2FA" method="post" class="space-y-4">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="Code" class="block text-gray-800 font-bold mb-2">Authentication Code</label>
                <input asp-for="Code" class="w-full p-3 rounded-lg text-gray-800 bg-gray-100 border border-gray-300 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent focus:shadow-md shadow-[#6172de] transition duration-300 ease-in-out transition-property[box-shadow,border-color]" placeholder="Enter your code" required />
                <span asp-validation-for="Code" class="text-red-500 text-sm mt-2"></span>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn-primary w-full py-3 rounded font-bold hover:bg-indigo-700 transition duration-300 focus:outline-none focus:ring-2 focus:ring-indigo-500">Verify</button>
        </form>

        <!-- Back to Login Link -->
        <div class="text-center mt-6">
            <a asp-action="Login" class="text-indigo-500 hover:underline">Back to Login</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
