@{
    Layout = "_Layout_Anonymous"; // Use a minimal or specific layout for the landing page
}


<div class="container mx-auto flex flex-col lg:flex-row items-center justify-center min-h-screen relative px-4 lg:px-8 xl:px-16">
    <!-- Text Section -->
    <div class="w-full lg:w-1/2 px-6 lg:px-12 xl:px-16 text-center lg:text-left text-white -mt-20 lg:-mt-32">
