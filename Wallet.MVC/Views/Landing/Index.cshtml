                    <path d="M10 60 C 60 20, 140 20, 190 60" stroke="#284a77" stroke-width="2" stroke-dasharray="5,5" fill="none" />
                    <polygon points="190,60 185,55 185,65" fill="#284a77" transform="rotate(20,190,60)" />
                </svg>
