@model Wallet.DTO.Request.ContactRequest
@{
    ViewData["Title"] = "Add Contact";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Contact</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f7f7f7;
            font-family: 'Arial', sans-serif;
        }

        .card-container {
            background-color: #ffffff;
            border-radius: 20px;
            padding: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            margin: 20px auto;
        }

        .btn-primary-custom {
            background-color: #6c63ff;
            border-color: #6c63ff;
            color: #fff;
            border-radius: 50px;
            padding: 10px 20px;
        }

            .btn-primary-custom:hover {
                background-color: #594ad5;
                border-color: #594ad5;
            }

        .form-group label {
            font-weight: bold;
        }
    </style>
</head>

<body>
    <div class="container mt-4">
        <div class="card-container">
            <h2 class="mb-4">Add a New Contact</h2>

            <!-- Search Form -->
            <form asp-action="SearchContact" method="get">
                <div class="form-group mb-3">
                    <label for="SearchTerm">Search Users</label>
                    <input type="text" id="SearchTerm" name="SearchTerm" class="form-control" placeholder="Enter username or email" />
                </div>

                <button type="submit" class="btn btn-primary-custom">Search</button>
            </form>

            <!-- Display Search Results -->
            <div id="searchResults" class="mt-4"></div>
        </div>
    </div>

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('#SearchTerm').on('input', function () {
                    var searchTerm = $(this).val();
                    if (searchTerm.length >= 2) { // Start searching after 2 characters
                        $.ajax({
                            url: '@Url.Action("SearchContact", "Contacts")',
                            type: 'GET',
                            data: { searchTerm: searchTerm },
                            success: function (data) {
                                $('#searchResults').html(data);
                            }
                        });
                    } else {
                        $('#searchResults').empty(); // Clear results if input is too short
                    }
                });
            });
        </script>
    }
</body>

</html>
