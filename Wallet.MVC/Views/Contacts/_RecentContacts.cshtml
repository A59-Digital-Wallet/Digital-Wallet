@model IEnumerable<Wallet.DTO.Response.ContactResponseDTO>

<style>
    .card-container {
        background-color: #ffffff;
        border-radius: 20px;
        padding: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        width: 150px;
        margin: 10px;
    }

    .contact-img {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 10px;
    }

    .btn-primary-custom {
        background-color: #4f46e5;
        border-color: #6c63ff;
        color: #fff;
        border-radius: 50px;
        padding: 10px 20px;
        font-size: 14px;
        font-weight: bold;
        text-decoration: none;
    }

        .btn-primary-custom:hover {
            background-color: #4338ca;
        }
</style>

<div class="container mt-4">
    <div class="d-flex flex-column align-items-start mb-8">
        @foreach (var contact in Model)
        {
            string name = $"{contact.FirstName} {contact.LastName}";
            <div class="card-container text-left mb-2 w-100">
                <img src="@contact.ProfilePictureURL" class="contact-img mb-1" alt="@contact.FirstName's Profile Picture">

                <p class="small m-0">@name</p>
            </div>
        }
    </div>
    <div class="mt-3 w-100">
        <a href="@Url.Action("Index", "Contacts")" class="btn btn-primary-custom w-100">Show All</a>
    </div>
</div>




