@model IEnumerable<Wallet.DTO.Response.ContactResponseDTO>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Contacts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f7f7f7;
            font-family: 'Arial', sans-serif;
        }

        .card-container {
            background-color: #ffffff;
            border-radius: 20px;
            padding: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            margin: 20px auto;
        }

        .contact-img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 10px;
        }

        .btn-remove {
            background-color: #FF6B6B;
            border-color: #FF6B6B;
            color: #fff;
            border-radius: 50px;
            padding: 10px 20px;
        }

            .btn-remove:hover {
                background-color: #ff4a4a;
                border-color: #ff4a4a;
            }

        .btn-primary-custom {
            background-color: #6c63ff;
            border-color: #6c63ff;
            color: #fff;
            border-radius: 50px;
            padding: 10px 20px;
        }

        .card-details {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
    </style>
</head>

<body>
    <div class="container mt-4">
        <h2 class="mb-4">All Contacts</h2>

        @foreach (var contact in Model)
        {
            string name = $"{contact.FirstName} {contact.LastName}";
            <div class="card-container mb-4">
                <div class="card-details">
                    <div>
                        <img src="@contact.ProfilePictureURL" class="contact-img mb-1" alt="@contact.FirstName's Profile Picture">
                        <span>@name</span>
                    </div>
                    <form asp-action="RemoveContact" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="contactId" value="@contact.Id" />
                        <button type="submit" class="btn btn-remove">
                            <i class="fas fa-minus"></i> Remove
                        </button>
                    </form>
                </div>
            </div>
        }

        <div class="text-center mt-4">
            <a href="@Url.Action("AddContact", "Contacts")" class="btn btn-primary-custom">
                <i class="fas fa-plus"></i> Add Contact
            </a>
        </div>
    </div>

    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
