@model Wallet.MVC.Models.TransferViewModel

@{
    ViewData["Title"] = "Initiate Transfer";
}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<div class="container mx-auto mt-8">
    <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Initiate Transfer</h2>

        <form method="post" asp-action="ProcessTransfer">
            <!-- Hidden field to store FromWalletId -->
            <input type="hidden" asp-for="FromWalletId" />

            <!-- Hidden field to store ToWalletId -->
            <input type="hidden" asp-for="ToWalletId" />

            <!-- Hidden field to store ContactId -->
            <input type="hidden" asp-for="ContactId" />

            <!-- Transfer Amount -->
            <div class="mb-4">
                <label asp-for="Amount" class="block text-gray-700 font-bold mb-2">Amount</label>
                <input asp-for="Amount" class="form-input mt-1 block w-full p-2 border border-gray-300 rounded-lg" step="0.01" />
                <span asp-validation-for="Amount" class="text-red-500 text-sm"></span>
            </div>

            <!-- Description Field -->
            <div class="mb-4">
                <label asp-for="Description" class="block text-gray-700 font-bold mb-2">Description</label>
                <input asp-for="Description" class="form-input mt-1 block w-full p-2 border border-gray-300 rounded-lg" />
                <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
            </div>

            <!-- Category Selection -->
            <div class="mb-4">
                <label asp-for="SelectedCategoryId" class="block text-gray-700 font-bold mb-2">Category (optional)</label>
                <select asp-for="SelectedCategoryId" class="form-select mt-1 block w-full p-2 border border-gray-300 rounded-lg">
                    <option value="" selected="@(Model.SelectedCategoryId == null ? "selected" : "")">No category selected</option>
                    @if (Model.Categories != null && Model.Categories.Any())
                    {
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Value" selected="@(Model.SelectedCategoryId == int.Parse(category.Value) ? "selected" : "")">@category.Text</option>
                        }
                    }
                    else
                    {
                        <option value="" disabled>No categories available</option>
                    }
                </select>
                <span asp-validation-for="SelectedCategoryId" class="text-red-500 text-sm"></span>
            </div>

            <!-- Recurring Transfer Option -->
            <div class="mb-4">
                <label asp-for="IsRecurring" class="block text-gray-700 font-bold mb-2">Make Recurring</label>
                <input asp-for="IsRecurring" type="checkbox" class="form-checkbox h-5 w-5 text-blue-600" />
            </div>

            <!-- Recurrence Interval Selection (only shown if recurring) -->
            <div class="mb-4" id="recurrenceIntervalGroup" style="display: none;">
                <label asp-for="RecurrenceInterval" class="block text-gray-700 font-bold mb-2">Recurrence Interval</label>
                <select asp-for="RecurrenceInterval" class="form-select mt-1 block w-full p-2 border border-gray-300 rounded-lg">
                    <option value="Daily">Daily</option>
                    <option value="Weekly">Weekly</option>
                    <option value="Monthly">Monthly</option>
                </select>
                <span asp-validation-for="RecurrenceInterval" class="text-red-500 text-sm"></span>
            </div>

            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg">Transfer</button>
        </form>
    </div>
</div>

<script>
    document.getElementById('IsRecurring').addEventListener('change', function () {
        var intervalGroup = document.getElementById('recurrenceIntervalGroup');
        if (this.checked) {
            intervalGroup.style.display = 'block';
        } else {
            intervalGroup.style.display = 'none';
        }
    });
</script>
