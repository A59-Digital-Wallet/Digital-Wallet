@model Wallet.MVC.Models.TransactionHistoryViewModel

@{
    ViewData["Title"] = "Transaction History";
}

<div class="container mt-5">
    <h2 class="text-3xl font-bold tracking-tight text-gray-900">Transaction History</h2>

    @if (Model.MonthlyTransactions != null && Model.MonthlyTransactions.Any())
    {
        @foreach (var monthGroup in Model.MonthlyTransactions)
        {
            <div class="mt-4">
                <h3 class="text-xl font-semibold text-gray-700">@monthGroup.MonthYear</h3>

                <div class="mt-2 bg-white shadow-md rounded-lg">
                    @foreach (var transaction in monthGroup.Transactions)
                    {
                        <div class="p-4 border-b last:border-none">
                            <div class="flex justify-between">
                                <div>
                                    <p class="text-sm text-gray-500">@transaction.Date.ToString("MMMM dd, yyyy")</p>
                                    <p class="text-lg font-medium text-gray-800">@transaction.Description</p>
                                </div>
                                <div class="text-right">
                                    <p class="text-lg font-semibold @(transaction.Direction == "Incoming" ? "text-green-500" : "text-red-500")">
                                        @transaction.Amount.ToString("C")
                                    </p>
                                    <p class="text-sm text-gray-500">@transaction.Direction</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <p class="text-gray-500">No transactions available.</p>
    }
</div>

