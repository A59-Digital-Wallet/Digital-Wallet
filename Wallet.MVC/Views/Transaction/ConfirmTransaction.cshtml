@model TransactionConfirmationViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirm Transaction</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Confirm Transaction</h2>
        <div class="alert alert-warning" role="alert">
            You are about to initiate a transaction that requires verification. Please confirm to proceed.
        </div>
        <form asp-action="ProcessConfirmTransaction" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="WalletId" />
            <input type="hidden" asp-for="CardId" />
            <input type="hidden" asp-for="Amount" />
            <input type="hidden" asp-for="Description" />
            <input type="hidden" asp-for="TransactionType" />
            <input type="hidden" asp-for="TransactionToken" />
            <input type="hidden" asp-for="RecipinetWalletId"/>

            

            <div class="mb-3">
                <label>Amount:</label>
                <span>@Model.Amount.ToString()</span>
            </div>

            <div class="mb-3">
                <label>Description:</label>
                <span>@Model.Description</span>
            </div>
            @if (Model.RequiresCode)
            {
                <div class="mb-3">
                    <label for="VerificationCode" class="form-label">Verification Code</label>
                    <input type="text" asp-for="VerificationCode" class="form-control" required />
                    <span asp-validation-for="VerificationCode" class="text-danger"></span>
                </div>
            }
           

            <div class="mb-3 text-center">
                <button type="submit" class="btn btn-primary">Confirm and Proceed</button>
                <a href="@Url.Action("Index", "Dashboard")" class="btn btn-secondary" type="button" onclick="cancelTransaction()">Cancel</a>
            </div>
        </form>
        
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function cancelTransaction() {
            // Redirect to the home page without submitting the form
            window.location.href = '@Url.Action("Index", "Dashboard")';
        }
    </script>
</body>
</html>
