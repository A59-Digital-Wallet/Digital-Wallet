<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - My Digital Wallet</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMqvgybY/e+idvT/bJchV3PPR8XTVHIMk5N3Ocz" crossorigin="anonymous">
</head>

<body class="bg-gray-100 font-sans">
    <!-- Navigation Bar -->
    <nav class="bg-white shadow-md">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <div class="text-xl font-bold">
                <a href="@Url.Action("Index", "Dashboard")" class="text-indigo-600">My Digital Wallet</a>
            </div>
            <div>
                <ul class="flex space-x-6">
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a href="@Url.Action("AdminPanel", "Admin")" class="text-gray-600 hover:text-indigo-600" onclick="checkAuthentication(event)">Admin Panel</a>
                        </li>
                    }
                    <li>
                        <a href="@Url.Action("Index", "Dashboard")" class="text-gray-600 hover:text-indigo-600" onclick="checkAuthentication(event)">Home</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Contacts")" class="text-gray-600 hover:text-indigo-600" onclick="checkAuthentication(event)">Contacts</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Stats")" class="text-gray-600 hover:text-indigo-600" onclick="checkAuthentication(event)">Statistics</a>
                    </li>
                    <!-- Additional Navigation Links -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a href="@Url.Action("Profile", "User")" class="text-gray-600 hover:text-indigo-600">Profile</a>
                        </li>
                        <li>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="text-gray-600 hover:text-red-600">Log Out</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a href="@Url.Action("Login", "Account")" class="text-gray-600 hover:text-indigo-600">Log In</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Register", "Account")" class="text-gray-600 hover:text-indigo-600">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content Area -->
    <div class="container mx-auto mt-8">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="bg-white mt-8 p-4 shadow-md text-center">
        <p class="text-gray-600">&copy; 2024 My Digital Wallet. All rights reserved.</p>
    </footer>

    <!-- Optional Scripts Section -->
    @RenderSection("Scripts", required: false)

    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        function checkAuthentication(event) {
            var isAuthenticated = @User.Identity.IsAuthenticated.ToString().ToLower();
            if (!isAuthenticated) {
                event.preventDefault();
                window.location.href = '@Url.Action("Login", "Account")';
            }
        }
    </script>
</body>

</html>
