@model ErrorViewModel
@{
    Layout = "_Layout"; // Ensures the error page uses the same layout as other pages
    ViewData["Title"] = "Error";
}

<div class="container mx-auto mt-16 text-center">
    <h1 class="text-4xl font-bold text-red-600 mb-4">Oops! Something went wrong.</h1>
    <h2 class="text-lg text-gray-700 mb-6">An error occurred while processing your request.</h2>

    @if (Model.ShowRequestId)
    {
        <p class="text-sm text-gray-500 mb-4">
            <strong>Request ID:</strong> <code class="bg-gray-100 p-1 rounded">@Model.RequestId</code>
        </p>
    }

    <p class="text-md text-gray-600 mb-8">
        If you are the application owner, check the logs for more information. You can switch to the <strong>Development</strong> environment to see more details about the error.
    </p>

    <div class="flex justify-center space-x-4">
        <a href="javascript:history.back()" class="btn-secondary py-2 px-4 rounded-full font-bold shadow hover:bg-green-600 transition">
            <i class="fas fa-arrow-left btn-custom-icon"></i> Go Back
        </a>
        <a href="@Url.Action("Index", "Dashboard")" class="btn-primary py-2 px-4 rounded-full font-bold shadow hover:bg-indigo-700 transition">
            <i class="fas fa-home btn-custom-icon"></i> Return Home
        </a>
    </div>
</div>

<!-- Include any additional scripts or styles if necessary -->
<script src="https://cdn.tailwindcss.com"></script>
