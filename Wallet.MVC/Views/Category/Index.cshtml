@model IEnumerable<Wallet.MVC.Models.CategoryViewModel>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f7f7f7;
            font-family: 'Arial', sans-serif;
        }

        .card-container {
            background-color: #ffffff;
            border-radius: 20px;
            padding: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            margin: 20px auto;
        }

        .btn-primary-custom {
            background-color: #6c63ff;
            border-color: #6c63ff;
            color: #fff;
            border-radius: 50px;
            padding: 10px 20px;
        }

            .btn-primary-custom:hover {
                background-color: #594ad5;
                border-color: #594ad5;
            }

        .list-group-item {
            background-color: transparent;
            border: none;
            padding-left: 0;
            padding-right: 0;
            margin-bottom: 10px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .list-group-item .d-flex {
                align-items: center;
            }
    </style>
</head>

<body>

    <div class="container mt-4">
        <h2 class="mb-4">Categories</h2>

        @foreach (var category in Model)
        {
            <div class="card-container mb-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <span>@category.Name</span>
                    </div>
                    <div>
                        <a href="@Url.Action("EditCategory", new { id = category.Id })" class="btn btn-warning">Edit</a>
                        <form asp-action="DeleteCategory" method="post" style="display:inline-block;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="categoryId" value="@category.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        }

        <div class="text-center mt-4">
            <a href="@Url.Action("CreateCategory", "Category")" class="btn btn-primary">Add Category</a>
        </div>
    </div>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
